<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="1080.0" styleClass="body" stylesheets="@../css/Serielizable.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="serielizable.view.ControllerFilmStats">
   <children>
      <MenuBar layoutX="10.0" layoutY="10.0" stylesheets="@../css/Serielizable.css" useSystemMenuBar="true" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <menus>
            <Menu mnemonicParsing="false" text="Películas">
               <items>
                  <MenuItem mnemonicParsing="false" text="Lists" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Series">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#serie" text="Lists" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Buscar">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#search" text="Search" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Desconectarse">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#logOff" text="Log off" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <VBox layoutX="50.0" layoutY="54.0">
         <children>
            <PieChart fx:id="pieChart" prefHeight="299.0" prefWidth="443.0" title="Películas" />
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Películas totales:">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="nFilms" text="n" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="587.0" layoutY="56.0">
         <children>
            <BarChart fx:id="barChart" prefHeight="299.0" prefWidth="443.0" title="Mis notas">
              <xAxis>
                <CategoryAxis side="BOTTOM" fx:id="xaxis" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yaxis" side="LEFT" />
              </yAxis>
            </BarChart>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Películas puntuadas:">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="nFilmsRated" text="n" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
